{
  "name": "Trabalho",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Benjamim <benjamimq015@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start:docker": "rimraf dist && tsc -p tsconfig.build.json && docker-compose up",
    "start:prod": "NODE_ENV=prod node dist/main/server.js",
    "start:dev": "NODE_ENV=dev tsnd --respawn --transpile-only --ignore-watch node_modules src/main/server.ts",
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "postbuild": "yarn start:prod",
    "test": "jest --passWithNoTests --silent --noStackTrace --runInBand",
    "test:verbose": "jest --passWithNoTests --runInBand",
    "test:unit": "yarn test --watch -c jest.unit.config.js",
    "test:integration": "yarn test --watch -c jest.integration.config.js",
    "test:staged": "yarn test --findRelatedTests",
    "test:ci": "yarn test --coverage --no-cache",
    "typeorm": "ts-node-dev ./node_modules/typeorm/cli.js",
    "typeorm:dev": "NODE_ENV=dev ts-node-dev ./node_modules/typeorm/cli.js",
    "typeorm:test": "NODE_ENV=test ts-node-dev ./node_modules/typeorm/cli.js"
  },
  "devDependencies": {
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.20",
    "@types/module-alias": "^2.0.0",
    "@types/multer": "^1.4.5",
    "@types/node": "^14.14.31",
    "@types/pg": "^7.14.10",
    "@types/rimraf": "^3.0.0",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.15.2",
    "@typescript-eslint/parser": "^4.15.2",
    "eslint": "^7.20.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.1",
    "git-commit-msg-linter": "^3.0.0",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.2",
    "ts-node-dev": "^1.1.6",
    "typescript": "^4.2.2"
  },
  "dependencies": {
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "module-alias": "^2.2.2",
    "multer": "^1.4.2",
    "pg": "^8.5.1",
    "reflect-metadata": "^0.1.13",
    "some-validations": "^0.1.0",
    "typeorm": "^0.2.31"
  },
  "_moduleAlias": {
    "@": "dist"
  }
}
